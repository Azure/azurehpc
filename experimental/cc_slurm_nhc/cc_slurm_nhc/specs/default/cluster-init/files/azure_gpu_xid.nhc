#!/bin/bash

# Check for any GPU Xid errors in syslog
GPU_XID_TEST="GPU Xid errors detected"


function check_gpu_xid()
{
xid_found_line=$(grep "Xid" /var/log/syslog | head -n 1)

if [ "$xid_found_line" != "" ]; then
   dbg "Found GPU Xid entry in syslog, $xid_found_line"

   log "$GPU_XID_TEST: $xid_found_line"
   die 1 "$FUNCNAME: $GPU_XID_TEST: $xid_found_line"
else
   dbg "No GPU Xid entry found in syslog"
   return 0
fi
}
