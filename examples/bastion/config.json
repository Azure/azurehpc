{
    "location": "variables.location",
    "resource_group": "variables.resource_group",
    "install_from": "",
    "admin_user": "variables.admin_user",
    "variables": {
        "jumpbox_image": "OpenLogic:CentOS:7.7:latest",
        "admin_user": "hpcadmin",
        "win_image": "MicrosoftWindowsDesktop:Windows-10:21h1-pron:latest",
        "location": "<NOT-SET>",
        "resource_group": "<NOT-SET>",
        "vm_type": "Standard_D4s_v3",
        "vnet_name": "BastionVNet",
        "low_priority": false,
        "bastion_subnet": "10.10.0.0/26",
        "bastion_name": "bastion",
        "vnet_resource_group": "variables.resource_group",
        "customdata": "@cloud-init.txt",
        "win_password": "<NOT-SET>",
        "key_vault": "<NOT-SET>",
        "secret_name": "WinVM-{{variables.admin_user}}"
    },
    "global_tags": {},
    "vnet": {
        "resource_group": "variables.vnet_resource_group",
        "name": "variables.vnet_name",
        "address_prefix": "10.10.0.0/20",
        "subnets": {
            "default": "10.10.1.0/24"
        }
    },
    "resources": {
        "bastion-jumpbox": {
            "type": "vm",
            "vm_type": "variables.vm_type",
            "public_ip": false,
            "image": "variables.jumpbox_image",
            "accelerated_networking": true,
            "subnet": "default",
            "custom_data": "variables.customdata",
            "tags": []
        },
        "bastion-winbox": {
            "type": "vm",
            "vm_type": "variables.vm_type",
            "public_ip": false,
            "image": "variables.win_image",
            "accelerated_networking": true,
            "subnet": "default",
            "password": "variables.win_password"
        }
    },
    "install": [
        {
            "type": "local_script",
            "script": "bastion.sh",
            "args": [
                "variables.vnet_resource_group",
                "variables.location",
                "variables.bastion_subnet",
                "variables.bastion_name",
                "variables.vnet_name"
            ]
        },
        {
            "type": "local_script",
            "script": "bastion_properties.sh",
            "args": [
                "variables.bastion_name",
                "variables.resource_group"
            ]
        },
        {
            "type": "local_script",
            "script": "create_keyvault.sh",
            "args": [
              "variables.resource_group",
              "variables.key_vault"
            ]
        },
        {
            "type": "local_script",
            "script": "add_password_in_keyvault.sh",
            "args": [
              "variables.key_vault",
              "variables.secret_name",
              "variables.win_password"
            ]
        }
    ]
}
